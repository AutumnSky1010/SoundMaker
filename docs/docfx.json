{
  "metadata": [
    {
      "src": [
        {
          "src": "../src/SoundMaker",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "SoundMaker Documentation",
      "_appTitle": "SoundMaker Documentation",
      "_appFooter": "SoundMaker Â© 2022-2024",
      "_enableSearch": true,
      "_appLogoPath": "images/favicon.png",
      "_appFaviconPath": "images/favicon.png",
      "pdf": false
    }
  }
}